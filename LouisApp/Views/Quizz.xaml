<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="LouisApp.Views.Quizz"
             x:Name="QuizzPage"
             BackgroundColor="#f8f9fa">

    <StackLayout Padding="20" Spacing="20">
        <Label Text="Quiz des Drapeaux" 
               FontSize="32"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,10,0,20"/>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Frame Grid.Column="0" 
                   BackgroundColor="White"
                   CornerRadius="10"
                   HasShadow="True"
                   Padding="15"
                   Margin="0,0,5,0">
                <Label Text="{Binding Score, StringFormat='Score: {0}'}"
                       FontSize="20"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
            </Frame>
            
         
            <Frame Grid.Column="1" 
                   BackgroundColor="White"
                   CornerRadius="10"
                   HasShadow="True"
                   Padding="15"
                   Margin="5,0,0,0">
                <Label FontSize="20"
                       FontAttributes="Bold"
                       HorizontalOptions="Center">
                    <Label.Text>
                        <MultiBinding StringFormat="Vies: {0}">
                            <Binding Path="Lives"/>
                        </MultiBinding>
                    </Label.Text>
                </Label>
            </Frame>
        </Grid>
        <Frame BackgroundColor="White" 
               CornerRadius="10" 
               HasShadow="True"
               Padding="20"
               Margin="0,10,0,10">
            <Label Text="{Binding CountryName}"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
        </Frame>

       
        <Label Text="Sélectionnez le drapeau correct:"
               FontSize="18"
               HorizontalOptions="Center"
               Margin="0,0,0,10"/>

     
        <CollectionView ItemsSource="{Binding FlagOptions}"
                        SelectionMode="None"
                        HorizontalOptions="Center">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" 
                                Span="2"
                                HorizontalItemSpacing="10"
                                VerticalItemSpacing="10"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Button Text="{Binding}"
                            FontSize="48"
                            HeightRequest="100"
                            WidthRequest="150"
                            Command="{Binding BindingContext.CheckAnswerCommand, Source={x:Reference QuizzPage}}"
                            CommandParameter="{Binding}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        <Button Text="Recommencer"
                Command="{Binding RestartGameCommand}"
                IsVisible="{Binding GameOver}"
                BackgroundColor="#FF5722"
                TextColor="White"
                FontSize="18"
                HorizontalOptions="Center"
                Margin="0,20,0,0"/>
    </StackLayout>
</ContentPage>