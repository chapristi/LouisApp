<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LouisApp.Views.Add"
             Title="Add a New Country">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Country Name" />
        <Entry Text="{Binding NewCountry.name}" Placeholder="Enter country name" />

        <Label Text="Capital" />
        <Entry Text="{Binding NewCountry.capital}" Placeholder="Enter capital" />

        <Label Text="Currency" />
        <Entry Text="{Binding NewCountry.currency}" Placeholder="Enter currency" />

        <Label Text="Population" />
        <Entry Text="{Binding NewCountry.population}" Keyboard="Numeric" Placeholder="Enter population" />

        <Label Text="Flag" />
        <Image Source="{Binding NewCountry.media.flag}" HeightRequest="100" WidthRequest="150" />

        <Button Text="Upload Flag Image" Command="{Binding PickImageCommand}" BackgroundColor="Blue" TextColor="White" />

        <Button Text="Add Country" Command="{Binding AddCountryCommand}" BackgroundColor="Green" TextColor="White" />

    </VerticalStackLayout>

</ContentPage>