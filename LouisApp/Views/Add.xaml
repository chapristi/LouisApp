<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LouisApp.Views.Add"
             Title="Ajouter un Nouveau Pays">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Nom du pays" />
        <Entry Text="{Binding NewCountry.name}" Placeholder="Entrez le nom du pays" />

        <Label Text="Capitale" />
        <Entry Text="{Binding NewCountry.capital}" Placeholder="Entrez la capitale" />

        <Label Text="Monnaie" />
        <Entry Text="{Binding NewCountry.currency}" Placeholder="Entrez la monnaie" />

        <Label Text="Population" />
        <Entry Text="{Binding NewCountry.population}" Keyboard="Numeric" Placeholder="Entrez la population" />

        <Label Text="Drapeau" />
        <Entry Text="{Binding NewCountry.media.flag}" Placeholder="Entrez le lien du drapeau" />

        <!-- Utilisez Command au lieu de Clicked -->
        <Button Text="Ajouter le pays" 
                Command="{Binding AddCountryCommand}"
                BackgroundColor="#4CAF50"
                TextColor="White"
                Margin="0,10,0,10" />
    </VerticalStackLayout>

</ContentPage>